<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFA658"
    tools:context="com.example.quassain.fasttrack.DriverMapActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>
</RelativeLayout>






    <Button
        android:id="@+id/driver_logout_button"
        android:layout_width="205dp"
        android:layout_height="55dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:background="#FFA658"
        android:layout_alignParentEnd="true"
        android:text="@string/logout" />
    <Button
        android:id="@+id/driver_settings_button"
        android:layout_width="205dp"
        android:layout_height="55dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:background="#FFA658"
        android:text="@string/settings"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />


    <RelativeLayout
        android:id="@+id/relative2"
        android:background="#FFA658"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:visibility="gone">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image_customer"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentStart="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="18dp"
            android:padding="3dp"
            android:src="@drawable/profile"
            app:civ_border_color="#FFA658"
            app:civ_border_width="2dp" />

        <TextView
            android:id="@+id/name_customer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/profile_image_customer"
            android:text="Customer Name"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp">

        </TextView>
        <TextView
            android:id="@+id/customer_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/profile_image_customer"
            android:layout_below="@+id/name_customer"
            android:text="Customer Phone Number"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp">

        </TextView>


        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/phone"
            app:tint="@color/black"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"

            />




    </RelativeLayout>




</RelativeLayout>



